enum Role {
  user
  admin
}

enum Status {
  waiting
  accepted
}

enum gender {
  male
  female
  other
}

enum accessGroup {
private 
public
}


enum access {
  private
  public
  friend
}

enum groupRequestType {
  invite
  join
}

enum commentReact {
   like
   dislike
}


enum notify {
  iviteGroup

}

